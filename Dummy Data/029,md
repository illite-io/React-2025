## âœ… 3. yupìœ¼ë¡œ ìŠ¤í‚¤ë§ˆ ìœ íš¨ì„± ê²€ì‚¬ ì ìš©

ğŸ“„ `/components/LoginFormWithYup.tsx`

```tsx
import { useForm } from 'react-hook-form';
import { yupResolver } from '@hookform/resolvers/yup';
import * as yup from 'yup';

type FormValues = {
  username: string;
  password: string;
};

const schema = yup.object().shape({
  username: yup.string().required('ì•„ì´ë””ëŠ” í•„ìˆ˜ì…ë‹ˆë‹¤.'),
  password: yup
    .string()
    .required('ë¹„ë°€ë²ˆí˜¸ëŠ” í•„ìˆ˜ì…ë‹ˆë‹¤.')
    .min(4, 'ë¹„ë°€ë²ˆí˜¸ëŠ” ìµœì†Œ 4ì ì´ìƒì…ë‹ˆë‹¤.'),
});

const LoginFormWithYup = () => {
  const {
    register,
    handleSubmit,
    formState: { errors },
  } = useForm<FormValues>({
    resolver: yupResolver(schema),
  });

  const onSubmit = (data: FormValues) => {
    console.log('ë¡œê·¸ì¸ ì‹œë„:', data);
  };

  return (
    <form onSubmit={handleSubmit(onSubmit)}>
      <input placeholder="ì•„ì´ë””" {...register('username')} />
      {errors.username && <p>{errors.username.message}</p>}

      <input type="password" placeholder="ë¹„ë°€ë²ˆí˜¸" {...register('password')} />
      {errors.password && <p>{errors.password.message}</p>}

      <button type="submit">ë¡œê·¸ì¸</button>
    </form>
  );
};

export default LoginFormWithYup;
```

